<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F6FFA4</item>
        <item name="colorPrimaryVariant">#E5F36A</item>
        <item name="colorOnPrimary">#F6FFA4</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="LoginTheme" parent="FirebaseUI">
        <item name="colorPrimary">#FF9800</item>
        <item name="colorPrimaryVariant">#00BCD4</item>
        <item name="colorOnPrimary">#FFEB3B</item>

        <item name="colorButtonNormal">#FFEB3B</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/logo</item>
        <item name="android:textColorHint">@color/browser_actions_bg_grey</item>


    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">

    </style>

</resources>